<% obj.each do |user| %>
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">

        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <%=  user.username if user%>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to user.email, user_path(user), class: "text-success" %></h5>
            <%= link_to gravatar_for(user), user_path(user), class: "btn btn-outline-success"  %>
            <%= link_to user.username, user_path(user), class: "btn btn-outline-info" %>
            <%= pluralize(user.articles.count, "article") if user.articles%>
          </div>
          <div class="card-footer text-muted">
            <small> Created <%= time_ago_in_words(user.created_at) %> ago,</small>
            <small> Updated <%= time_ago_in_words(user.updated_at) %> ago</small>
          </div>

          <h4 align="center"><%=  user.username %>'s articles</h4>
          <%= will_paginate @user_articles %>
          <%= render "articles/article", obj: user.articles %>
        </div>
      </div>
    </div>
  </div>
<% end %>